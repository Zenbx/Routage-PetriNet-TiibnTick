<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="001-enable-postgis" author="pickndrop-team">
        <sql>CREATE EXTENSION IF NOT EXISTS postgis;</sql>
        <sql>CREATE EXTENSION IF NOT EXISTS postgis_topology;</sql>
        <rollback>
            <sql>DROP EXTENSION IF EXISTS postgis_topology;</sql>
            <sql>DROP EXTENSION IF EXISTS postgis;</sql>
        </rollback>
    </changeSet>
</databaseChangeLog>